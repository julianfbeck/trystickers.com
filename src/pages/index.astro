---
import Layout from "../layouts/Layout.astro";

interface App {
  title: string;
  description: string;
  icon: string;
  appStoreId: string;
  storeUrl?: string;
  features?: string[];
  bgColor?: string;
}

const apps: App[] = [
  {
    title: "iEmoji - AI Emoji Generator",
    description:
      "Create unique, custom emoji stickers with the power of artificial intelligence. Transform your ideas into beautiful stickers instantly.",
    icon: "iemoji.png",
    appStoreId: "6740461326",
    storeUrl:
      "https://apps.apple.com/app/apple-store/id6740461326?pt=120183609&ct=trystickers&mt=8",
    features: [
      "AI-Powered Magic",
      "Perfect for iMessage",
      "Create & Customize",
      "Quick & Easy Sharing",
    ],
    bgColor: "from-blue-500/10 to-purple-500/10",
  },
  {
    title: "WhatsEmoji for WhatsApp",
    description:
      "Generate custom emoji stickers for WhatsApp using AI. Create expressive and unique stickers that bring your conversations to life.",
    icon: "whatsemoji.png",
    appStoreId: "6740031063",
    features: [
      "AI-Powered Sticker Generation",
      "Custom Emoji Creation",
      "One-Click WhatsApp Sharing",
      "Unlimited Sticker Packs",
    ],
    bgColor: "from-green-500/10 to-emerald-500/10",
  },
];

const getAppStoreUrl = (app: App) =>
  app.storeUrl || `https://apps.apple.com/app/id${app.appStoreId}`;
---

<Layout
  title="AI Emoji & Sticker Generators - Create Custom Stickers for iMessage & WhatsApp"
  description="Transform your messages with AI-powered emoji and sticker generators. Create unique custom stickers for iMessage and WhatsApp using advanced artificial intelligence."
>
  <main class="min-h-screen bg-gradient-to-b from-gray-50 to-white">
    <div
      class="absolute inset-0 bg-[url('/images/emoji-pattern.png')] opacity-5"
      aria-hidden="true"
    >
    </div>

    <div class="relative py-20 px-4 sm:px-6 lg:px-8">
      <div class="max-w-5xl mx-auto">
        <header class="text-center mb-20">
          <div class="relative mb-8">
            <div class="absolute inset-x-0 top-1/2 transform -translate-y-1/2">
              <div
                class="h-[1px] w-full bg-gradient-to-r from-transparent via-purple-200 to-transparent"
              >
              </div>
            </div>
            <div
              class="relative inline-flex items-center justify-center space-x-4 bg-white px-6 py-2 rounded-full shadow-sm"
            >
              <span class="text-4xl animate-bounce">‚ú®</span>
              <span class="text-4xl animate-pulse delay-75">üé®</span>
              <span class="text-4xl animate-bounce delay-150">‚ú®</span>
            </div>
          </div>

          <div
            class="inline-flex items-center justify-center px-4 py-1.5 rounded-full bg-blue-50 text-blue-700 text-sm font-medium mb-6"
          >
            <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"
              ></path>
            </svg>
            <span>iOS Apps</span>
          </div>

          <h1 class="relative">
            <span
              class="absolute -inset-1 block blur-2xl bg-gradient-to-r from-purple-600/20 via-blue-600/20 to-pink-600/20 rounded-3xl"
            ></span>
            <span
              class="relative block text-6xl font-extrabold mb-4 bg-gradient-to-r from-purple-600 via-blue-600 to-pink-600 bg-clip-text text-transparent"
            >
              AI-Powered Emoji &
              <br class="hidden sm:block" />
              Sticker Creation
            </span>
          </h1>

          <div class="relative mt-8 max-w-2xl mx-auto">
            <div
              class="absolute -inset-1 bg-gradient-to-r from-purple-100 via-blue-100 to-pink-100 rounded-2xl blur"
            >
            </div>
            <p
              class="relative text-xl text-gray-600 leading-relaxed bg-white/90 backdrop-blur-sm rounded-xl p-6"
            >
              Transform your iPhone conversations with custom AI-generated
              stickers and emojis. Create unique expressions for iMessage and
              WhatsApp that make chatting more fun and personal.
            </p>
          </div>

          <div class="mt-12 flex flex-wrap justify-center gap-4">
            <div
              class="inline-flex items-center px-4 py-2 rounded-full bg-purple-50 text-purple-700 text-sm font-medium"
            >
              <span class="mr-2">ü§ñ</span>
              Powered by AI
            </div>
            <div
              class="inline-flex items-center px-4 py-2 rounded-full bg-blue-50 text-blue-700 text-sm font-medium"
            >
              <span class="mr-2">üì±</span>
              Made for iOS
            </div>
            <div
              class="inline-flex items-center px-4 py-2 rounded-full bg-blue-50 text-blue-700 text-sm font-medium"
            >
              <span class="mr-2">‚ö°Ô∏è</span>
              Instant Creation
            </div>
          </div>
        </header>

        <section class="space-y-12" aria-label="Featured Apps">
          {
            apps.map((app) => (
              <article class="relative">
                <div
                  class={`absolute inset-0 bg-gradient-to-r ${app.bgColor} rounded-3xl`}
                />
                <div class="relative bg-white/80 backdrop-blur-xl rounded-3xl p-8 shadow-xl hover:shadow-2xl transition-all border border-gray-100">
                  <div class="flex flex-col lg:flex-row gap-8 items-center">
                    <div class="relative">
                      <div class="absolute -inset-4 bg-gradient-to-r from-purple-600 to-blue-600 rounded-2xl opacity-20 blur-lg" />
                      <img
                        src={app.icon}
                        alt={`${app.title} App Icon`}
                        class="relative w-32 h-32 rounded-2xl shadow-lg"
                        loading="lazy"
                        width="128"
                        height="128"
                      />
                    </div>
                    <div class="flex-1 text-center lg:text-left">
                      <h2 class="text-3xl font-bold text-gray-800 mb-3">
                        {app.title}
                      </h2>
                      <p class="text-gray-600 text-lg mb-6">
                        {app.description}
                      </p>

                      {app.features && (
                        <div class="mb-6">
                          <h3 class="sr-only">Features</h3>
                          <ul
                            class="flex flex-wrap gap-3 justify-center lg:justify-start"
                            role="list"
                          >
                            {app.features.map((feature) => (
                              <li class="inline-flex items-center px-4 py-2 rounded-full bg-gradient-to-r from-purple-500/10 to-blue-500/10 text-gray-700 text-sm font-medium">
                                <span aria-hidden="true">‚ú®</span>
                                <span class="ml-2">{feature}</span>
                              </li>
                            ))}
                          </ul>
                        </div>
                      )}

                      <a
                        href={getAppStoreUrl(app)}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center justify-center px-8 py-4 rounded-full bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 transition-all text-white font-medium shadow-lg hover:shadow-xl hover:scale-105 transform"
                        aria-label={`Download ${app.title} on the App Store`}
                      >
                        <svg
                          class="w-6 h-6 mr-2"
                          viewBox="0 0 24 24"
                          fill="currentColor"
                        >
                          <path d="M16.5 3.5a2.5 2.5 0 0 1 2.5 2.5v12a2.5 2.5 0 0 1-2.5 2.5h-9a2.5 2.5 0 0 1-2.5-2.5V6a2.5 2.5 0 0 1 2.5-2.5h9ZM12 15.5a1 1 0 1 0 0 2 1 1 0 0 0 0-2Z" />
                        </svg>
                        <span>Download on the App Store</span>
                      </a>
                    </div>
                  </div>
                </div>
              </article>
            ))
          }
        </section>
      </div>
    </div>
  </main>
</Layout>
